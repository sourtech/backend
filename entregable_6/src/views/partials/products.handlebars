<div class="card mb-3">
    <div class="position-relative">
        <img class="card-img-top shop-image  img-fluid" src="https://dummyimage.com/600x400/ccc/000&text=" alt="{{ this.title }}">
        {{#unless this.stock}}<span class="badge badge-danger sin-stock">Sin Stock</span>{{/unless}}
        <span class="badge badge-success category">{{ this.category }}</span>
    </div>    
    <div class="card-body">
        <h4 class="card-title product-title">{{ this.title }}</h4>
        <p class="card-text product-description">{{ this.description }}</p>
        <div class="clearfix">
            <div class="price float-left">{{ this.price }} $</div>
            {{#if this.stock}}
            <a href="/api/carts/add/{{this._id}}" class="btn btn-raised btn-success float-right">
                <i class="fa fa-gift" aria-hidden="true"></i> Agregar
            </a>
            {{/if}}
        </div>
    </div>
</div>  
