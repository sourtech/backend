<section class="py-5 text-center container">
    <div class="row py-lg-5">
        <div class="col-lg-6 col-md-8 mx-auto">
            <h1 class="fw-light">Productos</h1>        
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        {{#each products }}
        <div class="col-md-4">
            <div class="card text-bg-light mb-3">
                <h4 class="card-header">#{{this.id}} {{this.title}}</h4>
                <div class="card-body">
                    <p class="card-text">{{this.description}}</p>                  
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Precio: {{this.price}} $</li>
                    <li class="list-group-item">Categor√≠a: {{this.category}}</li>
                    <li class="list-group-item">Estado: {{this.status}}</li>
                    <li class="list-group-item">Stock: {{this.stock}}</li>
                    <li class="list-group-item">Imagenes: {{this.thumbnail}}</li>
                </ul>  
                <div class="card-body text-center">
                    <a href="#" class="btn btn-primary">Borrar</a>                    
                </div>                               
            </div>
        </div>
        {{/each}}
    </div>
</div>


