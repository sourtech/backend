<section class="h-100 h-custom">
	<div class="container py-5 h-100">
    	<div class="row d-flex justify-content-center align-items-center h-100">
      		<div class="col-12">
        		<div class="card card-registration card-registration-2" style="border-radius: 15px;">
          			<div class="card-body p-0">
            			<div class="row g-0">
							{{#if payload.products }}
              				<div class="col-lg-12">
                				<div class="p-5">
                  					<div class="d-flex justify-content-between align-items-center mb-5">
                    					<h1 class="fw-bold mb-0 text-black">Cart</h1>
                    					<h6 class="mb-0 text-muted">{{payload.total}} producto/s</h6>
                  					</div>
                  					<hr class="my-4">
							
									{{#each payload.products }}
									 {{log this}}    
                  					<div class="row mb-4 d-flex justify-content-between align-items-center">
                    					<div class="col-md-2 col-lg-2 col-xl-2">
											<img src="https://dummyimage.com/400x600/ccc/000&text=" class="img-fluid rounded-3">
										</div>
										<div class="col-md-3 col-lg-3 col-xl-3">
											<h6 class="text-muted">Producto</h6>
											<h6 class="text-black mb-0">{{this._id.title}}</h6>
										</div>
										<div class="col-md-3 col-lg-3 col-xl-3">
											<h6 class="text-muted">Cantidad</h6>
											<h6 class="text-black mb-0">{{this.quantity}}</h6>
										</div>
										<div class="col-md-3 col-lg-3 col-xl-3">
											<h6 class="text-muted">Precio</h6>
											<h6 class="text-black mb-0">{{this._id.price}} $</h6>
										</div>					
										<div class="col-md-1 col-lg-1 col-xl-1 text-end">
											<a href="/api/carts/remove/{{this._id._id}}" class="text-muted"><i class="fa-regular fa-trash-can"></i></a>
										</div>
									</div>
                  					<hr class="my-4">
									{{/each}}
                  					<div class="d-flex justify-content-between align-items-center mb-5">
										<a href="/api/carts/remove/all" class="btn btn-raised btn-success">Borrar todo</a>
                    					<h6 class="mb-0 text-muted"><strong>TOTAL</strong>: 120 $</h6>
                  					</div>
								     <div class="d-flex flex-row-reverse mb-5">
										
                    					<a href="/api/tickets/purchase" class="btn btn-primary ">
											<div class="d-flex justify-content-between">
												<span>Comprar</span>
											</div>
										</a>	
                  					</div>
								</div>
								
              				</div>
							{{ else }}
								<div class="col-md-12">
									<div class="p-5">
										<div class="d-flex justify-content-between align-items-center mb-5">
											<h1 class="fw-bold mb-0 text-black">Cart</h1>
										</div>									
										<p class="text-center d-block">Tu carrito esta vacio ðŸ˜¢</p>
										<a class="text-center d-block" href="/products/">Seguir comprando</a>
									</div>
								</div>     
							{{/if}}
            			</div>
						
          			</div>
					
        		</div>
					

      		</div>
    	</div>
	</div>
</section>